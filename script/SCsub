Import('env')
import os

env.script_sources=[]
env.add_source_files(env.script_sources,"*.cpp")

Export('env')

if (env["gdscript"]=="yes"):
	SConscript('gdscript/SCsub');
SConscript('multiscript/SCsub');

if (env["tools"]=="no" and os.name=="nt"):
	lib = env.Library("script.nt.lib",env.script_sources)
else:
	lib = env.Library("script",env.script_sources)


env.Prepend(LIBS=[lib])


