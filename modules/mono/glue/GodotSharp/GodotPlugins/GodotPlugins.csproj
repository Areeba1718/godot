<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <LangVersion>10</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <!-- To generate the .runtimeconfig.json file-->
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <RollForward>LatestMajor</RollForward>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\GodotSharp\GodotSharp.csproj" />
  </ItemGroup>
  <Target Name="CopyFiles" AfterTargets="PostBuildEvent">
    <Copy SourceFiles="$(OutputPath)\$(AssemblyName).dll;$(OutputPath)\$(AssemblyName).pdb;$(OutputPath)\$(AssemblyName).runtimeconfig.json"
          DestinationFolder="$(MSBuildProjectDirectory)\..\..\..\..\..\bin\GodotSharp\Api\$(Configuration)"/>
  </Target>
</Project>
